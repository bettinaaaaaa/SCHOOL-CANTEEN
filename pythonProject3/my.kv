WindowManager:
    MainWindow:
    SecondWindow:
    MenuWindow:
    Monday:
    Tuesday:
    Wednesday:
    Thursday:
    Friday:
    Snack1:
    Snack2:
    Snack3:
    Snack4:
    Snack5:
    Lunch1:
    Lunch2:
    Lunch3:
    Lunch4:
    Lunch5:
    Final:


<MainWindow>:
    name:"main"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size

            source: "final.png"



    Button:
        text:"SCAN QR CODE"
        background_color:1,1,1,1
        font_color:0,0,1,1
        size_hint:0.2,0.2
        pos_hint:{'x':0.35,'y':0}

        on_release:
            app.qr()
            app.root.current="second"



<SecondWindow>:
    name:"second"
    canvas.before:
        Rectangle:

            pos: self.pos
            size:self.size


            source: "bgkd.jpg"







    AnchorLayout:
        anchor_x:"center"
        anchor_y:"bottom"
        BoxLayout:
            orientation:'vertical'
            size_hint: 0.3, 0.3


            Button:
                text:"Go Back"
                background_color:0.1,0.5,0.7,1



                on_release:
                    app.root.current="main"
                    root.manager.transition.direction="right"

            Button:
                text:"Go To Menu"
                background_color:0.1,0.5,0.7,1



                on_release:
                    app.root.current="menu"
                    root.manager.transition.direction="left"

<MenuWindow>:
    name:"menu"
    canvas.before:
        Rectangle:

            pos: self.pos
            size:self.size


            source: "indian.jpg"

    AnchorLayout:
        anchor_x:"center"
        anchor_y:"center"
        orientation:'horizontal'
        BoxLayout:
            orientation:'vertical'
            size_hint:.5,.5
            Button:
                text:"Monday"
                on_release:
                    app.submit()




            Button:
                text:"Tuesday"
                on_release:
                    app.submi()

            Button:
                text:"Wednesday"
                on_release:
                    app.subm()

            Button:
                text:"Thursday"
                on_release:
                    app.sub()

            Button:
                text:"Friday"
                on_release:
                    app.su()









